<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:id="@+id/crd_itemheadline_top"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_itemheadline_topimg"
                    android:src="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:padding="@dimen/dimen_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dime_5"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_itemheadline_time"
                    android:text="time"
                    android:textColor="@color/dark_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_itemheadline_title"
                    android:textSize="16dp"
                    android:maxLines="3"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/textgrey"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/dime_5"
            android:layout_weight="2.0"
            android:gravity="center"
            android:id="@+id/lay_itemtophead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"

                    android:layout_width="100dp"
                    android:layout_height="100dp">
                        <ImageView

                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:id="@+id/img_itemheadline"
                            android:src="@drawable/icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/dimen_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_itemheadline_source"
                            android:paddingLeft="@dimen/dime_5"
                            android:text="Source name-time"
                            android:textColor="@color/iphone_silver"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2.0"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                        <ImageView

                            android:id="@+id/img_itemheadline_bookmark"
                            android:src="@drawable/ic_bookmark"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:id="@+id/img_itemheadline_share"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:src="@drawable/ic_share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dime_5"
            android:layout_height="0.5dp"/>

</LinearLayout>
