<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dime_15"
        app:cardElevation="5dp"
        android:layout_margin="@dimen/dimen_10"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_itembreifing_main"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:background="@color/semi_trans"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_itembreifing_time"
                            android:text="Time"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/txt_itembreifing_title"
                            android:textSize="16dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:maxLines="2"
                            android:textColor="@color/white"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingLeft="@dimen/dime_5"
                        android:paddingRight="@dimen/dime_5"
                        android:background="@color/colorPrimaryDark"
                        android:id="@+id/txt_itembreifing_source"
                        android:text="Source name"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                        <LinearLayout
                            android:paddingLeft="@dimen/dime_15"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_weight="1.0"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="2.0"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent">
                                        <ImageView
                                                android:tint="@color/white"
                                            android:id="@+id/img_itemheadline_bookmark"
                                            android:src="@drawable/ic_bookmark"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"/>
                                        <ImageView
                                            android:tint="@color/white"
                                            android:id="@+id/img_itemheadline_share"
                                            android:layout_marginLeft="@dimen/dimen_10"
                                            android:src="@drawable/ic_share"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"/>
                                </LinearLayout>
                        </LinearLayout>

                </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
