<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_item_stories"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_weight="2.0"
               android:background="@drawable/gradien_itemnews"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/img_itemstory_pic"
                   android:adjustViewBounds="true"
                   android:scaleType="centerCrop"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
               <TextView
                   android:layout_alignParentBottom="true"
                   android:layout_margin="@dimen/dime_15"
                   android:id="@+id/txt_itemstory_date"
                   android:textColor="@color/white"
                   android:text="Date"
                   android:layout_marginTop="@dimen/dime_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </RelativeLayout>
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="3.0"
               android:padding="@dimen/dime_15"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/txt_itemstory_title"
                   android:textSize="18dp"
                   android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="@dimen/dimen_10"
                   android:textColor="@color/textgrey"
                   android:text="Title"
                   android:maxLines="3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/txt_itemstory_content"
                   android:textSize="16dp"
                   android:layout_marginTop="@dimen/dimen_10"
                   android:textColor="@color/textgrey"
                   android:text="Content"
                   android:maxLines="7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
       </LinearLayout>
        <Button
            android:id="@+id/btn_itemstory_readmore"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/button_round"
            android:text="View full article"
            android:layout_margin="@dimen/dime_15"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>
